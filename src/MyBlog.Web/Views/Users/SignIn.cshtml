@model SignInUserModel

@{
    ViewData["Title"] = "Entrar";
}

<article>
    <form class="authentication-form" asp-action="SignIn">
        <h2 class="form-title">@ViewData["Title"]</h2>

        <div class="field-div">
            <label class="form-label" asp-for="Username">Nome de usuário</label>
            <input asp-for="Username" />
        </div>
        <div class="field-div">
            <label class="form-label" asp-for="Password" >Senha</label>
            <input asp-for="Password" />
        </div>
                        
        <div class="button-div">
            <button class="form-button">Confirmar</button>
        </div>
                        
        <p>Não possui uma conta? <a class="form-link" asp-controller="Users" asp-action="SignUp">Clique aqui!</a></p>
    </form>
</article>