@model CreateUserInputModel

@{
    ViewData["Title"] = "Registrar";
}

<article>
    <form class="authentication-form" asp-action="SignUp" >
        <h2 class="authentication-form-title">@ViewData["Title"]</h2>
                        
        <div class="field-div">
            <label class="authentication-form-label"asp-for="Email" >E-mail</label>
            <input class="form-input" asp-for="Email" />
        </div>
        <div class="field-div">
            <label class="authentication-form-label" asp-for="Username">Nome de usuário</label>
            <input class="form-input" asp-for="Username" />
        </div>
        <div class="field-div">
            <label class="authentication-form-label" asp-for="Password" >Senha</label>
            <input class="form-input" asp-for="Password" />
        </div>
                        
        <div class="button-div">
            <button class="authentication-form-button">Confirmar</button>
        </div>
                        
        <p>Já possui uma conta? <a class="authenticationform-link" asp-controller="Users" asp-action="SignIn">Clique aqui!</a></p>
    </form>
</article>