@model SignInUserModel;

@{
    ViewData["Title"] = "Entrar";
}

<div>
    <h2>Entrar</h2>
    <form asp-action="SignIn">
        <div class="form-group">
            <label asp-for="Username" class="col-form-label"></label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <input class="form-control" asp-for="Password" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Entrar" />
        </div>
    </form>

    <p>Não possui um cadastro?<a asp-action="SignUp">Clique aqui!</a></p>
</div>